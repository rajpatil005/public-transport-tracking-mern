{
  "name": "kolhapur-bus-transport-server",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend for Kolhapur City Public Bus Transport System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "debug": "nodemon --inspect server.js",
    "watch": "nodemon server.js",
    "seed": "node scripts/seedData.js",
    "seed:prod": "NODE_ENV=production node scripts/seedData.js",
    "db:backup": "node scripts/backupDB.js",
    "db:restore": "node scripts/restoreDB.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.js\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf node_modules package-lock.json",
    "reinstall": "npm run clean && npm install"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^6.15.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0",
    "morgan": "^1.10.0",
    "qrcode": "^1.5.1",
    "redis": "^4.6.5",
    "socket.io": "^4.8.3"
  },
  "devDependencies": {
    "eslint": "^8.38.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
